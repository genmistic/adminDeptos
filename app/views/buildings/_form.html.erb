<div class="container">
  <div class="card texto">
  <%= form_with(model: building) do |form| %>
    <% if building.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(building.errors.count, "error") %> prohibido que este edificio se guarde:</h2>

        <ul>
          <% building.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>

    <div class="field">
      <%= form.label :direccion %>
      <%= form.text_field :direccion %>
    </div>

    <div class="field">
      <%= form.label :ciudad %>
      <%= form.text_field :ciudad %>
    </div>

    <div class="field">
      <%= form.label :region %>
      <%= form.text_field :region %>
    </div>

    <div class="card" style="color:red">
    <%= form.label :fotito, "Ingrese Foto" %>
    <%= form.file_field :fotito %>
    </div>

    <div class="card" >
      <%= form.submit  %>
    </div>
  <% end %>
  </div>
</div>