<div class="container">
<p id="notice"><%= notice %></p>
  <div class="card">
    <h1 id="luis">Edificio : <%= @building.nombre %></h1>
    
    <p>
      <strong>Direccion:</strong>
      <%= @building.direccion %>
    </p>

    <p>
      <strong>Ciudad:</strong>
      <%= @building.ciudad %>
    </p>

    <p>
      <strong>Region:</strong>
      <%= @building.region %>
    </p>
    
    <div >
    <% if @building.fotito.attached? %>
      <%= image_tag @building.fotito %>
    <%end%>
    </div>

    <div class="w3-card w3-yellow">
      <h2 id="luis">A <%= @building.nombre %>, le Pertenecen los Departamentos:</h2>
    </div>
    <div>
      <% @building.apartments.each do |ap| %>
      <table>
        <h3>Depto :<%= ap.puerta %><%end%></h3>
      </table>
    </div>
  </div>
</div>

<div>
  <%= link_to 'Editar', edit_building_path(@building), class: 'btn btn-primary' %> 
  <%= link_to 'Regresar', buildings_path, class: 'btn btn-primary'  %>
</div>