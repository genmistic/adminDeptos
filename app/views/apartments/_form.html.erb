<div class="container">
  <div class="card texto">
    <%= form_with(model: apartment) do |form| %>
      <% if apartment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(apartment.errors.count, "error") %> prohibido que este departamento se guarde:</h2>
          <ul>
            <% apartment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :Departamento %>
        <%= form.number_field :puerta %>
      </div>

      <div class="field">
        <%= form.label  :building_id, class: 'form-label' %><p>Seleccione edificio</p>
        <%= form.select :building_id, options_from_collection_for_select(@buildings, :id, :nombre, apartment.building_id), { include_blank: "Seleccione un Edificio" }, {class: 'form-control'} %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>
  </div>
</div>